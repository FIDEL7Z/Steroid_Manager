{% extends "layout.njk" %}

{% block head %}
    <title>AnabolEntradas</title>
    <link rel="stylesheet" href="/home.css"/>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css">
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;600&display=swap" rel="stylesheet">
{% endblock %}

{% block content %}
    <div class="content container">
        <div class="row justify-content-center mb-4">
            <div class="col-md-5 col-sm-12 mb-3">
                <form action="/productslist">
                    <button class="button product w-100">
                        Cadastro de Produtos 
                        <i class="bi bi-cart-check"></i>
                    </button>
                </form>
            </div>
            <div class="col-md-5 col-sm-12 mb-3">
                <form action="/cart">
                    <button class="button sale w-100">
                        Realizar Vendas 
                        <i class="bi bi-bag"></i>
                    </button>
                </form>
            </div>
        </div>

        <div class="row justify-content-center">
            <div class="col-md-5 col-sm-12 mb-3">
                <form action="/entrancesandexits">
                    <button class="button entrance-exit w-100">
                        Entrada e Saida 
                        <i class="bi bi-bar-chart-line"></i>
                    </button>
                </form>
            </div>
            <div class="col-md-5 col-sm-12 mb-3">
                <form action="/sales">
                    <button class="button details-sales w-100">
                        Detalhes de Vendas 
                        <i class="bi bi-graph-up"></i>
                    </button>
                </form>
            </div>
        </div>
    </div>
{% endblock %}
